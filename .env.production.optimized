# ========================================
# CONFIGURATION OPTIMISÉE VPS - KAOLACK 105 ANS
# ========================================

# ========================================
# Frontend Configuration
# ========================================
VITE_API_URL=https://api.kaolackcommune.sn/api
VITE_APP_NAME=Portail Kaolack - 105 Ans
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Célébration des 105 ans de la Commune de Kaolack
VITE_APP_AUTHOR=Mairie de Kaolack

# ========================================
# Backend Configuration
# ========================================
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# ========================================
# Database Configuration (MySQL 8.0)
# ========================================
DB_HOST=mysql
DB_PORT=3306
DB_USER=kaolack_user
DB_PASSWORD=CHANGE_ME_strong_password_32_chars_minimum
DB_ROOT_PASSWORD=CHANGE_ME_root_password_32_chars_minimum
DB_NAME=kaolack_db
DB_CHARSET=utf8mb4
DB_TIMEZONE=+00:00
DB_CONNECTION_LIMIT=100
DB_TIMEOUT=60000

# ========================================
# Redis Cache Configuration
# ========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_redis_password_16_chars
REDIS_DB=0
REDIS_TTL=3600
REDIS_MAX_MEMORY=256mb

# ========================================
# Security Tokens (GÉNÉRER AVEC: openssl rand -base64 64)
# ========================================
JWT_SECRET=CHANGE_ME_jwt_secret_minimum_64_characters_random_string
JWT_EXPIRY=7d
JWT_REFRESH_EXPIRY=30d
BCRYPT_ROUNDS=12
SESSION_SECRET=CHANGE_ME_session_secret_minimum_64_characters_random_string
SESSION_TIMEOUT=86400
COOKIE_SECRET=CHANGE_ME_cookie_secret_minimum_32_characters

# ========================================
# Upload Configuration
# ========================================
UPLOAD_DIR=/var/www/kaolack/uploads
MAX_FILE_SIZE=50000000
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
UPLOAD_MAX_CONCURRENT=5

# ========================================
# Public URLs
# ========================================
APP_URL=https://portail.kaolackcommune.sn
API_URL=https://api.kaolackcommune.sn
FRONTEND_URL=https://portail.kaolackcommune.sn
CORS_ORIGIN=https://portail.kaolackcommune.sn
CDN_URL=https://cdn.kaolackcommune.sn

# ========================================
# Email Configuration (SMTP)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@kaolackcommune.sn
SMTP_PASS=your_app_specific_password
SMTP_FROM=noreply@kaolackcommune.sn
SMTP_FROM_NAME=Mairie de Kaolack

# ========================================
# Logging & Monitoring
# ========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/kaolack/app.log
LOG_MAX_SIZE=100m
LOG_MAX_FILES=10
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# ========================================
# Performance & Rate Limiting
# ========================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS=false
COMPRESSION_ENABLED=true
STATIC_CACHE_MAX_AGE=31536000

# ========================================
# SSL & HTTPS
# ========================================
SSL_CERT_PATH=/etc/letsencrypt/live/portail.kaolackcommune.sn/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/portail.kaolackcommune.sn/privkey.pem
SSL_AUTO_RENEW=true

# ========================================
# Backup Configuration
# ========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_DIR=/var/backups/kaolack
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# ========================================
# Docker Compose Specific
# ========================================
COMPOSE_PROJECT_NAME=kaolack
COMPOSE_FILE=docker-compose.yml
COMPOSE_ENV_FILE=.env.production

# ========================================
# Health Checks
# ========================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# ========================================
# Analytics (Optional)
# ========================================
GOOGLE_ANALYTICS_ID=
GOOGLE_TAG_MANAGER_ID=
FACEBOOK_PIXEL_ID=

# ========================================
# Social Media Integration
# ========================================
FACEBOOK_APP_ID=
TWITTER_API_KEY=
INSTAGRAM_ACCESS_TOKEN=

# ========================================
# API Keys (External Services)
# ========================================
WEATHER_API_KEY=
MAPS_API_KEY=
STORAGE_API_KEY=
