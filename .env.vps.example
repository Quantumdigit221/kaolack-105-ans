# ========================================
# EXAMPLE .env for VPS Production Deployment
# ========================================
# Copy this file to .env.production and update the values

# ========================================
# Frontend Configuration
# ========================================
VITE_API_URL=https://api.kaolackcommune.sn/api
VITE_APP_NAME=Kaolack Stories Connect - 105 Ans
VITE_APP_VERSION=1.0.0

# ========================================
# Backend Configuration
# ========================================
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# ========================================
# Database Configuration
# IMPORTANTE: Générer des mots de passe forts!
# ========================================
DB_HOST=mysql
DB_PORT=3306
DB_USER=kaolack_user
DB_PASSWORD=CHANGE_ME_strong_password_at_least_16_chars
DB_ROOT_PASSWORD=CHANGE_ME_root_password_at_least_16_chars
DB_NAME=kaolack_db
DB_CHARSET=utf8mb4
DB_TIMEZONE=+00:00

# ========================================
# Redis Cache Configuration
# ========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# Security Tokens
# IMPORTANTE: Générer avec: openssl rand -base64 32
# ========================================
JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_base64_32
JWT_EXPIRY=7d
BCRYPT_ROUNDS=10
SESSION_SECRET=CHANGE_ME_generate_with_openssl_rand_base64_32
SESSION_TIMEOUT=86400

# ========================================
# Upload Configuration
# ========================================
UPLOAD_DIR=/var/www/kaolack/uploads
MAX_FILE_SIZE=50000000

# ========================================
# Email Configuration (Gmail)
# Tutorial: https://support.google.com/accounts/answer/185833
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_not_your_gmail_password
SMTP_FROM=noreply@kaolackcommune.sn

# ========================================
# Public URLs
# ========================================
APP_URL=https://105ans.kaolackcommune.sn
API_URL=https://api.kaolackcommune.sn
FRONTEND_URL=https://105ans.kaolackcommune.sn
CORS_ORIGIN=https://105ans.kaolackcommune.sn

# ========================================
# Logging
# ========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ========================================
# Rate Limiting (requests per RATE_LIMIT_WINDOW minutes)
# ========================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# Monitoring & Sentry (optional)
# ========================================
SENTRY_DSN=

# ========================================
# Docker Compose Specific
# ========================================
# Utilisés par docker-compose.yml
COMPOSE_PROJECT_NAME=kaolack
COMPOSE_FILE=docker-compose.yml
